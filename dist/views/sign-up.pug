extends layout 
block content 
  h1= title
  form(method='POST' action = '')
    label(for='username') Enter your username: 
    input#username(type='text' required='true' name='username')
    label(for='password') Enter your password:
    input#password(type='password' required='true' name='password')
    label(for='confirm-password') Confirm your password:
    input#confirm-password(type='password' required='true' name='confirm-password')
    label(for='admin') Are you an admin?
    input(type='checkbox' name='admin')
    button(type='submit') Submit
  if errors
    ul
      for error in errors
        li= error.msg